@model IEnumerable<LibrarySystem.Borrower>

@{
    ViewBag.Title = "Index";
}

<h2>Borrower</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BorrowerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BorrowerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.BorrowerID }) |
            @Html.ActionLink("Details", "Details", new { id=item.BorrowerID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.BorrowerID })
        </td>
    </tr>
}

</table>
