@model IEnumerable<LibrarySystem.Report>

@{
    ViewBag.Title = "Reports";
}

<h2>Reports</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NumOfAvailableItems)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumOfBorroersItems)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumOfOverdueItems)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumOfBorrowes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumOfStaff)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NumOfAvailableItems)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumOfBorroersItems)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumOfOverdueItems)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumOfBorrowes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumOfStaff)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
